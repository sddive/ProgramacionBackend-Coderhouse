<div>
    <ul>
        {{#each products.docs}}
            <li>
                <strong>{{this.title}}</strong>
                <button type='button' onclick="addtoCart('{{this.id}}')">Agregar al carrito</button>
            </li>
        {{/each}}
    </ul>
</div>

<hr>
<a href="products?page=1">Pág.1</a>
