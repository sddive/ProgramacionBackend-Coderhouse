<h2>Restaurar constraseña</h2>
<hr>

<form action="/api/sessions/restorePassword03" method="post">

    {{#if error}}
        <div style="color: red;">{{error}}</div>
    {{/if}}

    {{#if message}}
        <div style="color: green;">{{message}}</div>
    {{/if}}

    <div style="color: red;" id="error"></div>
    <input type="password" name="password01" id="password01" placeholder="Nueva constraseña">
    <input type="password" name="password02" id="password02" placeholder="Repite la nueva constraseña">
    <input type="text" name="token" id="token" hidden>
    <br>
    <input type="submit" value="Restaurar">
</form>

